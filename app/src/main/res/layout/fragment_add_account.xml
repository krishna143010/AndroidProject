<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddAccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="@color/purple_500"
        android:layout_gravity="center"
        android:text="Add Client Account"/>
    <AutoCompleteTextView
        android:id="@+id/cityAutoCompleteView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:paddingStart="16dp"
        android:hint="Select Client Name"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:completionThreshold="1"/>
    <EditText
        android:id="@+id/accountNameEditTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:ems="10"
        android:hint="Assign Name to this Account"
        android:inputType="textPersonName"
        android:paddingTop="25dp"/>
    <EditText
        android:id="@+id/accountIdentifierEditTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Account Identifier"
        android:paddingStart="16dp"
        android:inputType="textPersonName"
        android:paddingTop="25dp"
        android:text=""/>
    <EditText
        android:id="@+id/preferredPaymentMethodEditTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:ems="10"
        android:hint="Mobile Number / UPI / Zelle"
        android:inputType="textPersonName"
        android:paddingTop="25dp"/>

    <Spinner
        android:id="@+id/accountCurrencyTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:autofillHints="Currency type"
        android:contentDescription="Currency Type"
        android:ems="10"
        android:paddingStart="16dp"
        android:paddingTop="25dp"
        android:visibility="visible" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:id="@+id/spinnerError"></TextView>

    <Button
        android:id="@+id/addAccountButtonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Add Account"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:textSize="14sp" />

</LinearLayout>