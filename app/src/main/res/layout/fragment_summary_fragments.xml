<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SummaryFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Summary"
        android:textColor="@color/purple_500"
        android:textSize="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/totalHoldings"
        android:layout_gravity="center"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:paddingStart="16dp"
        android:gravity="left"
        android:textSize="18dp"
        android:text="Your total Holdings are:" />
    <TextView
        android:layout_width="match_parent"
        android:text="Client Summary"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"></TextView>

    <ListView
        android:id="@+id/clientSummary"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingStart="16dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:text="Account Summary"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"></TextView>
    <ListView
        android:id="@+id/accountSummary"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:paddingStart="16dp"
        android:layout_marginTop="10dp" />
</LinearLayout>