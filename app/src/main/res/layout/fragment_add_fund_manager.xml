<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".AddFundManagerFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/purple_500"
        android:gravity="center"
        android:text="Add Fund Manager"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/fmNameTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Enter your Name"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center" />
    <EditText
        android:id="@+id/emailEditTextView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:hint="Enter your Email Address"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/phoneEditTextView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:hint="Enter your Mobile Number"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:id="@+id/addFundManagerButtonView"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textSize="14sp"
        android:text="Add as Fund Manager" />


    <ImageButton
        android:id="@+id/gotoLogin"
        android:layout_width="115dp"
        android:layout_height="51dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="right"
        android:padding="10dp"
        android:src="@drawable/arrowiconfor_foreground" />
    <TextView

        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Entry"
        android:gravity="center"></TextView>

</LinearLayout>